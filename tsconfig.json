{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "preserve",
    "lib": [
      "es2015",
      "DOM.Iterable",
      "ES2016.Array.Include",
      "ES2017.Object",
      "DOM"
    ],
    "module": "esnext",
    "moduleResolution": "Node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "./server/**/*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./.eslintrc.js",
    "./prettierrc.js",
    "./webpack/**.js",
    "./types/*"
  ],
  "exclude": []
}
